def main():
  if len(sys.argv) < 2 or len(sys.argv) > 3: 
    get_help()

  DEFAULT_PATH = os.path.expanduser('~') + '/.addr_book'
  DEFAULT_BACUP_PATH = os.path.expanduser('~') + '/.addr_book_backup'

  if sys.argv[1] == 'add':
    search_book(sys.argv[2])
  elif sys.argv[1] == 'delete':
    delete_contact(sys.argv[2])
  elif sys.argv[1] == 'update':
    update_contact(sys.argv[2])
  else:
    search_contact(sys.argv[2])


# Statement to call the main function
if __name__ == '__main__':
  main()
