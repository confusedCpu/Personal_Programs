import copy, os, pprint, re, sys

def build_contact(line): # Reads in data from a csv and returns dictionaries
  # templete for contact
  # {Name: '', Cell Phone: '', Home Phone: '', Work Phone: '', Work Ext: '', Email: ''}
  copy = line.strip()
  contact = {}
  name_regex = re.compile(r'[A-Z]\w*')
  cell_regex = re.compile(r'(?<=cellp: )(\d{3}|\(\d{3}\))(-|\.|x|\s)\d{3}(-|\.|x|\s)\d{4}')

  if 'name' in copy:    #check if a name was provided
    contact['name'] = name_regex.search(copy) 
  if 'cellp' in copy:    #check if a name was provided
    contact['cellp'] = cell_regex.search(copy)
  if 'homep' in copy:    #check if a name was provided
    homep_regex = re.compile(r'(?<=homep: )((\d{3}|\(\d{3}\))(-|\.|x|\s)\d{3}(-|\.|x|\s)\d{4}')
    contact['homep'] = homep_regex.search(copy)
  if 'workp' in copy:    #check if a name was provided
    workp_regex = re.compile(r'(?<=workp: )(\d{3}|\(\d{3}\))(-|\.|x|\s)\d{3}(-|\.|x|\s)\d{4}(x\d{1,4})')
    contact['workp'] = workp_regex.search(copy)
  if 'emailw' in copy:    #check if a name was provided
    emailw_regex = re.compile(r'(?<=emailw:)\w*@\w*\.[a-zA-Z]*')
    contact['emailw'] = emailp_regex.search(copy)
  if 'emailp' in copy:    #check if a name was provided
    emailp_regex = re.compile(r'(?<=email:)\w*@\w*\.[a-zA-Z]*')
    contact['emailp'] = emailp_regex.search(copy)

  return contact

